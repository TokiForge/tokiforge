{
  "name": "@tokiforge/core",
  "version": "1.2.0",
  "description": "Core design token and theming engine for TokiForge. Framework-agnostic runtime theme switching, CSS variables, token parsing, validation, and export. Supports React, Vue, Angular, Svelte, and more.",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "build:all": "npm run build",
    "dev": "tsup --watch",
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf dist",
    "analyze": "tsup --metafile && echo 'Bundle analysis complete. Upload dist/metafile.json to https://esbuild.github.io/analyze/'",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "sideEffects": false,
  "keywords": [
    "design-tokens",
    "theme-engine",
    "css-variables",
    "theming",
    "token-parser",
    "token-export",
    "runtime-theming",
    "framework-agnostic"
  ],
  "author": "TokiForge Community",
  "license": "AGPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/TokiForge/tokiforge.git"
  },
  "homepage": "https://github.com/TokiForge/tokiforge#readme",
  "bugs": {
    "url": "https://github.com/TokiForge/tokiforge/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@vitest/ui": "^4.0.7",
    "fake-indexeddb": "^6.2.5",
    "jsdom": "^23.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.3",
    "vitest": "^4.0.7"
  },
  "dependencies": {
    "vite": "7.2.1",
    "vitepress": "^1.6.4",
    "yaml": "^2.3.4"
  }
}
